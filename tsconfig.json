{
  "compilerOptions": {
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "strict": true,
    "sourceMap": true,
    "target": "es2018",
    "outDir": ".build",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2015",
      "es2019",
      "esnext.asynciterable"
    ],
    "rootDir": "./src"
  },

  "exclude": ["*.mjs"]
}